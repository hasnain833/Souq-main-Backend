# Local development overrides
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Local MongoDB (Compass-visible)
MONGODB_URI=mongodb://127.0.0.1:27017/Souq

# Email: enable in dev, prefer Mailtrap if creds provided; otherwise Ethereal fallback
DISABLE_EMAIL=false
# Disable email verification/OTP for local dev (direct login)
EMAIL_VERIFICATION_ENABLED=false
# Disable phone verification/OTP for local dev (direct phone login)
PHONE_VERIFICATION_ENABLED=false
# Mailtrap (optional)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=587
# EMAIL_USER=<your_mailtrap_user>
# EMAIL_PASS=<your_mailtrap_pass>
SMTP_FROM="SOUQ Dev <noreply@souq.dev>"

# JWT (placeholders; replace if needed)
JWT_SECRET=dev-jwt-secret
JWT_REFRESH_SECRET=dev-jwt-refresh-secret

# Password reset template URL
FRONTEND_URL=http://localhost:5280
