# Environment Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
MONGO_URI=mongodb://127.0.0.1:27017/Souq
MONGODB_URI=mongodb://127.0.0.1:27017/Souq


# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# Email Configuration (SMTP with Mailtrap preferred; Ethereal fallback in dev)
# Option A: Mailtrap (recommended for testing)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USER=your-mailtrap-username
EMAIL_PASS=your-mailtrap-password
SMTP_FROM="SOUQ Dev <noreply@souq.dev>"

# Option B: Gmail (not recommended for dev; requires app password)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password-here

# Disable all emails if true
DISABLE_EMAIL=false
# Disable OTP/email verification flow (direct login when false)
EMAIL_VERIFICATION_ENABLED=true

# Frontend URL (for email templates)
FRONTEND_URL=http://localhost:5280

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

FB_APP_ID=your_facebook_app_id_here
FB_APP_SECRET=your_facebook_app_secret_here
FB_CALLBACK_URL=http://localhost:5000/auth/facebook/callback

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number