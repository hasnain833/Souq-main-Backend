{
  "info": {
    "name": "SOUQ Dev Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "http://localhost:5000/health"
      }
    },
    {
      "name": "User Signup",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Test User\",\n  \"userName\": \"testuser\",\n  \"email\": \"you@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": "http://localhost:5000/api/user/auth/signup"
      }
    },
    {
      "name": "Verify Email (OTP)",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"Authorization","value":"Bearer {{accessToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"otp\": \"123456\"\n}"
        },
        "url": "http://localhost:5000/api/user/auth/verify-email"
      }
    },
    {
      "name": "User Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"you@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": "http://localhost:5000/api/user/auth/login"
      }
    },
    {
      "name": "Admin: Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminPass123!\"\n}"
        },
        "url": "http://localhost:5000/api/admin/auth/login"
      }
    },
    {
      "name": "Admin: Orders (GET)",
      "request": {
        "method": "GET",
        "header": [
          {"key":"Authorization","value":"Bearer {{adminToken}}"}
        ],
        "url": "http://localhost:5000/api/admin/orders"
      }
    },
    {
      "name": "Admin: Ratings (GET)",
      "request": {
        "method": "GET",
        "header": [
          {"key":"Authorization","value":"Bearer {{adminToken}}"}
        ],
        "url": "http://localhost:5000/api/admin/ratings"
      }
    }
  ],
  "variable": [
    {"key": "accessToken", "value": ""},
    {"key": "adminToken", "value": ""}
  ]
}
